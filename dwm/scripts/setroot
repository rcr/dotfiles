#!/bin/bash

while true; do
	mpd=$(ncmpcpp --now-playing '{%a - %t}|{%f}')
	vol=$(amixer get Master | tail -1 | sed 's/.*\[\([0-9]*%\)\].*/\1/')
	mut=$(amixer get Master | tail -1 | grep "\[on\]")
	net=$(iwgetid)
	if [ "$net" = "" ]
		then net="dis"
		else net="con"
	fi
	if [ "$mut" = "" ]
	  then vol="M $vol"
	  else vol="$vol"
	fi
	xsetroot -name "$mpd  ~  $net  ~  $vol  ~  $(date +%a\ %b\ %e\ \ %R)"
	sleep 3
done

